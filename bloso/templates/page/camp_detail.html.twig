{% extends 'base.html.twig' %}

{% block title %}Camp Detail!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-article-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <img class="show-article-img" src="{{ asset('images/') ~ camp.image }}">
                            <div class="show-article-title-container d-inline-block pl-3 align-middle">
                                <span class="show-article-title ">Krabpaaljongleren</span>
                                <br>
                                <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/alien-profile.png') }}"> {{ camp.author }} </span>
                                <span class="pl-2 article-details"> {{ camp.createdTime|date("Y-m-d H:i:s") }}</span>
                                <span class="pl-2 article-details">
                                    <span id="like-counter">{{ camp.likes }}</span>
                                    <a href="/news/krabpaaljongleren/heart" id="like-heart-button" class="fa fa-heart-o like-article"></a>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="article-text">
                                <p>{{ camp.paragraphs }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="share-icons mb-5"><span class="pr-1">Delen:</span> <i class="pr-1 fa fa-facebook-square"></i><i class="pr-1 fa fa-twitter-square"></i><i class="pr-1 fa fa-reddit-square"></i><i class="pr-1 fa fa-share-alt-square"></i></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <h3><i class="pr-3 fa fa-comment"></i>Reacties</h3>
                            <hr>

                            <form action="{{ path('savecamp') }}" method="post" style="width:70%;" enctype="multipart/form-data">

                            <div class="row mb-5">
                                <div class="col-sm-12">
                                    <img class="comment-img rounded-circle" src="{{ asset('images/astronaut-profile.png') }}">
                                    <div class="comment-container d-inline-block pl-3 align-top">
                                        <div class="form-group">
                                            <input type="text" name="campAuthor" class="form-control" placeholder="Your name">
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control comment-form" id="articleText" rows="2" placeholder="Your comment"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-info">Plaats reactie</button>
                                    </div>
                                </div>
                            </div>
                            </form>

                            {% for review in reviews %}
                            <div class="row">
                                <div class="col-sm-12">
                                    <img class="comment-img rounded-circle" src="{{ asset('images/alien-profile.png') }}">
                                    <div class="comment-container d-inline-block pl-3 align-top">
                                        <span class="commenter-name">{{ review.reviewerName|title }}</span>
                                        <br>
                                        <span class="comment"> {{review.message}}</span>
                                        <p><a href="#">Reageer</a></p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
